<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="10dp"
    >

    <TextView
        android:id="@+id/tv_common_rv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/iv_common_rv_like"
        android:gravity="bottom"
        android:textSize="14sp"
        android:textColor="@android:color/tertiary_text_light"
        tools:text="作者"/>

    <TextView
        android:id="@+id/tv_common_rv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_common_rv_author"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingEnd="10dp"
        android:textColor="@android:color/tertiary_text_light"
        tools:ignore="RtlSymmetry"
        android:textSize="12sp"
        tools:text="日期"/>

    <TextView
        android:id="@+id/tv_common_rv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_common_rv_author"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        tools:text="标题"/>

    <TextView
        android:id="@+id/tv_common_rv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_common_rv_like"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/iv_common_rv_like"
        android:layout_toStartOf="@+id/iv_common_rv_like"
        android:gravity="center_vertical"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="12sp"
        tools:text="类型" />

    <ImageView
        android:id="@+id/iv_common_rv_like"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_common_rv_title"
        android:padding="10dp"
        android:clickable="true"
        tools:ignore="ContentDescription"
        android:src="@drawable/like_selected"
        />
</RelativeLayout>
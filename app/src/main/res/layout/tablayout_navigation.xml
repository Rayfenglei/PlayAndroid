<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_navi_tab"
        android:layout_width="@dimen/tab_bottom_image"
        android:layout_height="@dimen/tab_bottom_image"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/tv_navi_tab"
        android:textColor="@drawable/tab_bottom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tab_bottom_text"
        android:gravity="center"/>
</LinearLayout>